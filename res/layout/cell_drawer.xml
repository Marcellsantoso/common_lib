<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selectable"
    android:padding="@dimen/margin_med" >

    <com.iapps.libs.views.ImageViewLoader
        android:id="@+id/img"
        android:layout_width="@dimen/img_drawer"
        android:layout_height="@dimen/img_drawer" >
    </com.iapps.libs.views.ImageViewLoader>

    <TextView
        android:id="@+id/tv"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_toRightOf="@+id/img"
        android:textColor="@color/White" />

</RelativeLayout>